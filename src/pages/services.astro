---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import FloatingActionButton from '../components/FloatingActionButton';
import { services } from '../data/services';
import { ArrowRight } from 'lucide-react';
---

<Layout
  title="Services Dératisation & Désinsectisation Bondy"
  description="Nos services professionnels : dératisation (rats, souris), désinsectisation (cafards, punaises), désinfection à Bondy et Île-de-France. Devis gratuit ☎ 07 67 39 38 85"
  canonical="/services"
  keywords="services dératisation, désinsectisation professionnelle, extermination nuisibles, traitement punaises de lit, élimination cafards, dératisation entreprise"
>
  <div class="min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-grow">
      {/* Hero Section - UX/UI moderne */}
      <div class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-blue-50 py-16 md:py-24">
        <!-- Éléments décoratifs -->
        <div class="absolute top-0 right-0 w-72 h-72 bg-primary-200/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-blue-200/20 rounded-full blur-2xl"></div>
        
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <!-- Badge élégant -->
            <div class="inline-flex items-center gap-2 px-6 py-3 bg-white/80 backdrop-blur-sm text-primary-700 rounded-full text-sm font-semibold mb-8 shadow-lg border border-primary-100">
              <div class="w-2 h-2 bg-primary-600 rounded-full animate-pulse"></div>
              Nos expertises professionnelles
            </div>
            
            <!-- Titre avec effet -->
            <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
              Services de <span class="bg-gradient-to-r from-primary-600 to-blue-600 bg-clip-text text-transparent">Qualité</span>
            </h1>
            
            <!-- Description adaptative -->
            <p class="text-lg md:text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed mb-12">
              <span class="block md:hidden">Solutions professionnelles contre tous nuisibles en Île-de-France</span>
              <span class="hidden md:block">Solutions complètes et écoresponsables de dératisation, désinsectisation et désinfection adaptées à vos besoins professionnels et résidentiels</span>
            </p>
            
            <!-- Navigation rapide mobile -->
            <div class="block md:hidden">
              <div class="flex gap-2 overflow-x-auto pb-2 justify-start">
                {services.slice(0, 4).map(service => (
                  <a href={`#service-${service.slug}`} class="flex-shrink-0 px-4 py-2 bg-white/80 text-primary-600 rounded-xl text-sm font-medium border border-primary-200 hover:bg-primary-50 transition-colors whitespace-nowrap">
                    {service.title.split(' ')[0]}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Services Grid - Exactement identique à la page d'accueil */}
      <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {services.map((service) => {
              const IconComponent = service.icon;
              return (
                <a
                  href={`/services/${service.slug}`}
                  class="group bg-white rounded-2xl lg:rounded-3xl p-6 lg:p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-primary-200 hover:-translate-y-2 relative overflow-hidden block"
                >
                  
                  {/* Gradient décoratif */}
                  <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-primary-100 to-blue-100 rounded-bl-3xl opacity-50 group-hover:opacity-70 transition-opacity duration-300"></div>
                  
                  {/* Contenu principal */}
                  <div class="relative z-10">
                    {/* Icône */}
                    <div class="w-16 h-16 lg:w-20 lg:h-20 bg-primary-50 rounded-2xl flex items-center justify-center mb-4 lg:mb-6 group-hover:bg-primary-100 group-hover:scale-110 transition-all duration-300">
                      <IconComponent className="w-8 h-8 lg:w-10 lg:h-10 text-primary-600" />
                    </div>

                    {/* Titre */}
                    <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-3 lg:mb-4 group-hover:text-primary-600 transition-colors duration-300 leading-tight min-h-[2.5rem] lg:min-h-[3rem]">
                      {service.title}
                    </h3>

                    {/* Description - Plus courte sur mobile */}
                    <p class="text-sm lg:text-base text-gray-600 mb-4 lg:mb-6 leading-relaxed">
                      <span class="block md:hidden">{service.description.substring(0, 80)}...</span>
                      <span class="hidden md:block">{service.description}</span>
                    </p>

                    {/* Badge prix - Design identique à l'accueil */}
                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-2">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          ✓ Devis gratuit
                        </span>
                      </div>
                      <div class="text-primary-600 group-hover:translate-x-1 transition-transform duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>

          {/* CTA Section - Desktop uniquement */}
          <div class="mt-16 text-center hidden md:block">
            <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl">
              <span>Demander un devis gratuit</span>
              <ArrowRight className="h-5 w-5" />
            </a>
          </div>
        </div>
      </section>
    </main>
    
    <!-- Floating Action Button -->
    <FloatingActionButton client:load />
    
    <Footer />
  </div>
</Layout>

<script>
  // Scroll to top when navigating
  window.scrollTo(0, 0);
</script>
