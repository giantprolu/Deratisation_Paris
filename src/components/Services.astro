---
import { services } from '../data/services';
import { ArrowRight, Phone } from 'lucide-react';
---

<section id="services" class="section section-gradient-primary">
  <div class="section-container">
    <!-- Header Section - Optimisé mobile -->
    <div class="section-header">
      <div class="badge badge-primary hidden sm:inline-flex">
        Nos expertises
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 text-center">
        <span class="block md:hidden">Nos Services</span>
        <span class="hidden md:block">Nos Services Professionnels</span>
      </h2>
      <p class="text-base md:text-xl text-gray-600 max-w-3xl mx-auto text-center leading-relaxed">
        <span class="block md:hidden">Solutions rapides contre tous nuisibles</span>
        <span class="hidden md:block">Solutions complètes et écoresponsables adaptées à vos besoins</span>
      </p>
    </div>

    <!-- Services Grid - Responsive optimisé -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
{services.slice(0, 6).map((service, index) => {
        const IconComponent = service.icon;
        return (
          <div class="group bg-white rounded-2xl lg:rounded-3xl p-6 lg:p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-primary-200 hover:-translate-y-2 relative overflow-hidden">
            
            <!-- Gradient décoratif -->
            <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-primary-100 to-blue-100 rounded-bl-3xl opacity-50 group-hover:opacity-70 transition-opacity duration-300"></div>
            
            <!-- Contenu principal -->
            <div class="relative z-10">
              <!-- Icône -->
              <div class="w-16 h-16 lg:w-20 lg:h-20 bg-primary-50 rounded-2xl flex items-center justify-center mb-4 lg:mb-6 group-hover:bg-primary-100 group-hover:scale-110 transition-all duration-300">
                <IconComponent className="w-8 h-8 lg:w-10 lg:h-10 text-primary-600" />
              </div>

              <!-- Titre -->
              <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-3 lg:mb-4 group-hover:text-primary-600 transition-colors duration-300 leading-tight min-h-[2.5rem] lg:min-h-[3rem]">
                {service.title}
              </h3>

              <!-- Description - Plus courte sur mobile -->
              <p class="text-sm lg:text-base text-gray-600 mb-4 lg:mb-6 leading-relaxed">
                <span class="block md:hidden">{service.description.substring(0, 80)}...</span>
                <span class="hidden md:block">{service.description}</span>
              </p>

              <!-- Actions - UX/UI optimisée -->
              <div class="flex flex-col gap-3">
                <!-- Action principale - Plus élégante sur mobile -->
                <a
                  href={`/services/${service.slug}`}
                  class="w-full bg-gradient-to-r from-primary-600 to-blue-600 text-white py-3 px-6 rounded-xl font-semibold text-center hover:from-primary-700 hover:to-blue-700 transition-all duration-300 flex items-center justify-center gap-2 shadow-md hover:shadow-lg"
                >
                  <span class="block md:hidden">Découvrir</span>
                  <span class="hidden md:block">En savoir plus</span>
                  <ArrowRight className="w-4 h-4 md:w-5 md:h-5" />
                </a>
                
                <!-- Action secondaire - Contact -->
                <div class="flex gap-2">
                  <a
                    href="/contact"
                    class="flex-1 bg-white text-primary-600 py-2 px-4 rounded-lg font-medium text-center border border-primary-200 hover:bg-primary-50 hover:border-primary-600 transition-all duration-300 text-sm"
                  >
                    Devis gratuit
                  </a>
                  <a
                    href="tel:+33767393885"
                    class="bg-green-50 text-green-700 py-2 px-4 rounded-lg font-medium hover:bg-green-100 transition-all duration-300 text-sm flex items-center gap-1"
                  >
                    <Phone class="w-5 h-5" />
                  </a>
                </div>
              </div>
            </div>

            <!-- Bordure animée -->
            <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-primary-600 to-blue-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          </div>
        );
      })}
    </div>

    <!-- CTA Section - Optimisé mobile -->
    <div class="mt-12 sm:mt-16 text-center">
      <!-- Mobile: CTA principal avec numéro -->
      <div class="block md:hidden space-y-4">
        <a href="tel:+33767393885" class="block w-full bg-green-600 text-white py-4 px-6 rounded-2xl font-bold text-lg hover:bg-green-700 transition-colors duration-300 shadow-xl">
          <Phone class="inline w-6 h-6" /> Appeler maintenant : 07 67 39 38 85
        </a>
        <a href="/contact" class="block w-full bg-primary-600 text-white py-3 px-6 rounded-xl font-semibold hover:bg-primary-700 transition-colors duration-300">
          ✉️ Demander un devis gratuit
        </a>
      </div>
      
      <!-- Desktop: CTA classique -->
      <div class="hidden md:block">
        <a href="/contact" class="inline-flex items-center gap-3 bg-primary-600 text-white px-8 py-4 rounded-2xl font-semibold hover:bg-primary-700 hover:scale-105 transition-all duration-300 shadow-xl">
          <span>Demander un devis gratuit</span>
          <ArrowRight className="w-5 h-5" />
        </a>
      </div>
    </div>
  </div>
</section>
