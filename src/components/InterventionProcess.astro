---
import { Clock, Zap, FileText, Calendar, User, CheckCircle, Phone } from 'lucide-react';

const processSteps = [
  {
    icon: Phone,
    number: '01',
    title: 'Contact & Diagnostic',
    description: 'Évaluation téléphonique gratuite et devis personnalisé sous 2h.',
    gradient: 'from-blue-500 to-cyan-500',
    bgColor: 'bg-blue-50',
    iconColor: 'text-blue-600',
    details: 'Appel gratuit • Diagnostic rapide • Devis détaillé'
  },
  {
    icon: Clock,
    number: '02',
    title: 'Intervention Rapide',
    description: 'Déplacement sous 24h en standard, 4h en urgence.',
    gradient: 'from-red-500 to-orange-500',
    bgColor: 'bg-red-50',
    iconColor: 'text-red-600',
    details: 'Disponible 7j/7 • Intervention d\'urgence • Équipe mobile'
  },
  {
    icon: Zap,
    number: '03',
    title: 'Traitement Professionnel',
    description: 'Mise en œuvre de solutions adaptées avec matériel certifié.',
    gradient: 'from-green-500 to-emerald-500',
    bgColor: 'bg-green-50',
    iconColor: 'text-green-600',
    details: 'Produits certifiés • Techniques avancées • Respect des normes'
  },
  {
    icon: FileText,
    number: '04',
    title: 'Suivi & Garantie',
    description: 'Rapport détaillé, conseils préventifs et garantie résultat.',
    gradient: 'from-purple-500 to-indigo-500',
    bgColor: 'bg-purple-50',
    iconColor: 'text-purple-600',
    details: 'Rapport complet • Conseils personnalisés • Garantie 6 mois'
  },
  {
    icon: Calendar,
    number: '05',
    title: 'Suivi Préventif',
    description: 'Programme de maintenance et contrôles réguliers.',
    gradient: 'from-orange-500 to-amber-500',
    bgColor: 'bg-orange-50',
    iconColor: 'text-orange-600',
    details: 'Planning annuel • Contrôles réguliers • Prévention active'
  }
];
---

<section class="section section-gradient-complex">
  <!-- Éléments décoratifs en arrière-plan -->
  <div class="bg-decoration-top-left"></div>
  <div class="bg-decoration-bottom-right"></div>
  
  <div class="section-container-relative">
    <!-- Header Section -->
    <div class="section-header">
      <div class="badge badge-gradient">
        <CheckCircle class="icon-sm" />
        Notre méthodologie
      </div>
      <h2 class="section-title">
        Comment Nous Intervenons
      </h2>
      <p class="section-subtitle">
        Un processus structuré en 5 étapes pour une efficacité maximale et votre tranquillité
      </p>
    </div>

    <!-- Cards en grille responsive améliorée -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-16">
      {processSteps.map((step, index) => {
        const IconComponent = step.icon;
        const isLastCard = index === processSteps.length - 1;
        return (
          <div
            key={index}
            class={`group relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-primary-200 hover:-translate-y-3 overflow-hidden ${isLastCard && processSteps.length === 5 ? 'md:col-span-2 xl:col-span-1 md:mx-auto xl:mx-0 md:max-w-md xl:max-w-none' : ''}`}
          >
            <!-- Numéro d'étape stylisé -->
            <div class="flex items-center justify-between mb-6">
              <div class={`w-16 h-16 ${step.bgColor} rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-500`}>
                <IconComponent className={`w-8 h-8 ${step.iconColor}`} />
              </div>
              <div class={`text-6xl font-black opacity-10 group-hover:opacity-20 transition-opacity duration-300 bg-gradient-to-r ${step.gradient} bg-clip-text text-transparent`}>
                {step.number}
              </div>
            </div>

            <!-- Contenu principal -->
            <div class="space-y-4">
              <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors duration-300 leading-tight">
                {step.title}
              </h3>
              
              <p class="text-gray-600 leading-relaxed">
                {step.description}
              </p>
              
              <!-- Points clés -->
              <div class="pt-4 border-t border-gray-100">
                <div class="flex flex-wrap gap-2">
                  {step.details.split(' • ').map((detail, detailIndex) => (
                    <span 
                      key={detailIndex}
                      class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700 group-hover:bg-primary-50 group-hover:text-primary-700 transition-colors duration-300"
                    >
                      {detail}
                    </span>
                  ))}
                </div>
              </div>
            </div>

            <!-- Bordure animée -->
            <div class={`absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r ${step.gradient} transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left`}></div>
            
            <!-- Effet de survol en arrière-plan -->
            <div class={`absolute inset-0 bg-gradient-to-br ${step.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-500 rounded-3xl`}></div>
          </div>
        );
      })}
    </div>

    <!-- Section Contact du Responsable Technique - Version améliorée -->
    <div class="bg-gradient-to-br from-primary-600 to-primary-800 rounded-3xl overflow-hidden shadow-2xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[500px]">
        
        <!-- Partie gauche - Contact -->
        <div class="relative p-8 lg:p-12 text-white">
          <!-- Éléments décoratifs -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full blur-2xl"></div>
          
          <div class="relative z-10 h-full flex flex-col justify-between">
            <!-- Header -->
            <div class="mb-8">
              <h3 class="text-3xl font-bold mb-4">
                Votre Expert Dédié
              </h3>
              <p class="text-white/90 text-lg leading-relaxed">
                Un professionnel certifié à votre service pour tous vos besoins d'intervention
              </p>
            </div>

            <!-- Contact Info -->
            <div class="space-y-6">
              <!-- Profil -->
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
                <div class="flex items-center gap-4 mb-4">
                  <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                    <User className="w-8 h-8 text-white" />
                  </div>
                  <div>
                    <p class="text-white/80 text-sm font-medium mb-1">Responsable Technique</p>
                    <h4 class="text-2xl font-bold">Sami RIK</h4>
                    <p class="text-white/70 text-sm">Expert certifié Certibiocide</p>
                  </div>
                </div>
              </div>

              <!-- Bouton d'appel -->
              <a
                href="tel:+33767393885"
                class="group bg-white text-primary-600 rounded-2xl p-6 flex items-center gap-4 hover:bg-gray-50 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1"
              >
                <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center group-hover:bg-primary-200 group-hover:scale-110 transition-all duration-300">
                  <Phone className="w-7 h-7 text-primary-600" />
                </div>
                <div class="flex-grow">
                  <p class="text-sm font-medium text-gray-600 mb-1">Appelez maintenant</p>
                  <p class="text-xl font-bold">07 67 39 38 85</p>
                  <p class="text-xs text-gray-500">Disponible 7j/7 - Urgences 24h/24</p>
                </div>
                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center group-hover:translate-x-1 transition-transform duration-300">
                  <svg className="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>

        <!-- Partie droite - Équipe -->
        <div class="bg-white p-8 lg:p-12 flex flex-col justify-center">
          <!-- Header -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
                <CheckCircle className="w-6 h-6 text-primary-600" />
              </div>
              <h4 class="text-2xl font-bold text-gray-900">Notre Équipe Certifiée</h4>
            </div>
            <p class="text-gray-600 leading-relaxed">
              Des professionnels qualifiés et expérimentés pour garantir la qualité de nos interventions
            </p>
          </div>

          <!-- Liste des certifications -->
          <div class="grid grid-cols-1 gap-4">
            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-300">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                <CheckCircle className="w-5 h-5 text-green-600" />
              </div>
              <div>
                <p class="font-semibold text-gray-900">Certification Certibiocide</p>
                <p class="text-sm text-gray-600">Agréments officiels et formations certifiées</p>
              </div>
            </div>

            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-300">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <CheckCircle className="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <p class="font-semibold text-gray-900">Formation Continue</p>
                <p class="text-sm text-gray-600">Mise à jour régulière des techniques</p>
              </div>
            </div>

            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-300">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                <CheckCircle className="w-5 h-5 text-purple-600" />
              </div>
              <div>
                <p class="font-semibold text-gray-900">Équipements Professionnels</p>
                <p class="text-sm text-gray-600">Matériel de pointe et produits certifiés</p>
              </div>
            </div>

            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-300">
              <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
                <CheckCircle className="w-5 h-5 text-orange-600" />
              </div>
              <div>
                <p class="font-semibold text-gray-900">Assurance Décennale</p>
                <p class="text-sm text-gray-600">Couverture complète de nos prestations</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
