---
import { Phone, MessageCircle } from 'lucide-react';
---

<!-- CTA Flottant Mobile - Plus discret et élégant -->
<div class="fixed bottom-6 left-4 right-4 z-50 md:hidden">
  <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200 p-4">
    <!-- Action principale unifiée -->
    <div class="flex items-center gap-3">
      <div class="flex-1">
        <p class="text-sm font-medium text-gray-900 mb-1">Besoin d'aide ?</p>
        <p class="text-xs text-gray-600">Devis gratuit • Sans engagement</p>
      </div>
      
      <div class="flex gap-2">
        <!-- Bouton Devis principal -->
        <a 
          href="/contact"
          class="bg-primary-600 text-white py-2 px-4 rounded-xl font-medium text-sm hover:bg-primary-700 transition-colors duration-300 flex items-center gap-2"
        >
          <MessageCircle className="w-4 h-4" />
          <span>Devis</span>
        </a>
        
        <!-- Bouton Appel secondaire -->
        <a 
          href="tel:+33767393885"
          class="bg-gray-100 text-gray-700 py-2 px-3 rounded-xl hover:bg-gray-200 transition-colors duration-300 flex items-center"
        >
          <Phone className="w-4 h-4" />
        </a>
      </div>
    </div>
  </div>
</div>

<style>
/* Animation d'entrée */
@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.fixed {
  animation: slideUp 0.5s ease-out;
}
</style>